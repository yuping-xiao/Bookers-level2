<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", class: "img-square pull-left profile-img", fallback: "no_image.jpg" %>

				<table class="table">
					
					<tbody>
						<tr>
							<th>name</th>
							<th><%= user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= user.introduction %></th>
						</tr>
					</tbody>


				</table>

			<% if user == current_user %>
			<div class="row">
					<%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
			</div>
			<% end %>

			<% if user != current_user %>
				<% if user.favorited_by?(current_user) %>
					<div class="row">
						<%= link_to "フォロー外す", user_relationship_path(user), method: :delete, class: "col-xs-12 btn btn-default" %>
					</div>
				<% else %>
					<div class="row">
						<%= link_to "フォローする", user_relationships_path(user), method: :post, class: "col-xs-12 btn btn-default" %>
					</div>
				<% end %>
			<% end %>


			<h2>New book</h2>

			<%= form_for(book) do |f| %>

			<% if book.errors.any? %>
				<p>error</p>
				<div class="alert alert-warning">
					<ul>
						<% book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
				<% end %>

			<div class="field row">
				<h4>Title</h4>
				<%= f.text_field :title %>
			</div>

			<div class="field row">
				<h4>Opinion</h4>
				<%= f.text_area :body %>
			</div>

			<div class="actions">
				<%= f.submit "Create Book", class: "btn btn-primary" %>
			</div>
			<% end %>

</div>