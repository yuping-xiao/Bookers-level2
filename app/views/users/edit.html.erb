<div class="body">
	<div class="container">
		<!-- <p id="notice"></p> -->

		<h2>User info</h2>
		<%= form_for(@user) do |f| %>
		<div class="field">
			<label class="control-label sr-only" for="inputEmail">Name</label>
			<%= f.text_field :username, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前" %>
		</div>

		<div class="field">
			<div class="user-edit-image">
			<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-square pull-left profile-thumb", fallback: "no_image.jpg" %>
			</div>

			<label class="control-label sr-only" for="inputEmail">Image</label>
			<%= f.attachment_field :profile_image, placeholder: "Choose file", class: "user-edit-form" %>
		</div>

		<div class="field">
			<label class="user-introduction" for="inputEmail">Introduction</label>
			<%= f.text_area :introduction, class: "user-introduction-form" %>
		</div>

		<div class="actions">
		<%= f.submit "Update User", class :"btn btn-lg btn-block btn-base-1 mt-20" %>
		</div>

		<% end %>
		
	</div>
</div>

