<div class="body">
	<div class="container">
		<!-- <p id="notice"></p> -->

		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Editing Book</h1>

				<%= form_for(book) do |f| %>

				<% if @book.errors.any? %>
					<p>error</p>
					<div class="alert alert-warning">
						<ul>
							<% @book.errors.full_messages.each do |message| %>
							<li><%= message %></li>
							<% end %>
						</ul>
					</div>
				<% end %>

				<div class="field row">
					<label for="book_title">Title</label>
					<%= f.text_field :title %>
				</div>

				<div class="field row">
					<label for="book_opinion">Opinion</label>
					<%= f.text_area :body %>
				</div>

				<div class="actions row">
					<%= f.submit 'Update Book', class:"btn btn-lg btn-block btn-base-1 mt-20" %>
				</div>

				<% end %>

				<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", "/books" %>
			</div>
		</div>

	</div>
</div>
