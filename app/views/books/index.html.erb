<div class="body">
	<div class="container">
		<div class="row">

			<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg" %>

				<table class="table">
					<tbody>
						<tr>
							<th>name</th>
							<th><%= @user.username %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
					</tbody>
				</table>

			<% if @user.id == current_user.id %>
			<div class="row">
				<p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
			</div>
			<% end %>


			<h2>New book</h2>
			<%= form_for(@book) do |f| %>

			<% if @book.errors.any? %>
			<p>error</p>
			<div class="alert alert-warning">
				<ul>
					<% @book.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
				</ul>
			</div>
			<% end %>

			<div class="field row">
				<h4>Title</h4>
				<%= f.text_field :title %>
			</div>

			<div class="field row">
				<h4>Opinion</h4>
				<%= f.text_area :body %>
			</div>

			<div class="actions row">
				<%= f.submit 'Create Book' %>
			</div>
			<% end %>

			</div>


			<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hovoer table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-square pull-left profile-thumb", fallback: "no_image.jpg" %>
						</td>
						<td>
							<%= book.title %>
						</td>
						<td>
							<%= book.body %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
			</div>

			
		</div>
	</div>
</div>
